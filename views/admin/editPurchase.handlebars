{{#if purchase}}
  <h1 class="mb-3">Editar compra:</h1>
  <div class="card">
    <div class="card-body">
      <form action="/admin/editPurchase" method="POST">
        <input type="hidden" name="id" value="{{purchase.id}}" />
        <label for="purchase_amount">Valor da Compra:</label>
        <input
          type="number"
          class="form-control"
          id="purchase_amount"
          name="purchase_amount"
          step="0.01"
          required
          placeholder="Use ponto para decimais"
          value="{{purchase.purchase_amount}}"
        /><br /><br />
        <label for="purchase_date">Data da Compra:</label>
        <input
          type="date"
          class="form-control"
          id="purchase_date"
          name="purchase_date"
          required
          value="{{purchase.purchase_date}}"
        /><br /><br />
        <fieldset class="row mb-3">
          <h5>Status atual <span class="badge text-bg-warning">{{purchase.status}}</span></h5>
          <legend class="col-form-label col-sm-2 pt-0">Status:</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="status"
                value="pendente"
                checked
              />
              <label class="form-check-label" for="gridRadios1">Pendente</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="status"
                value="paga"
              />
              <label class="form-check-label" for="gridRadios2">Paga</label>
            </div>
          </div>
        </fieldset>
        <input
          class="btn btn-outline-success"
          type="submit"
          value="Editar Compra"
        />
      </form>
    </div>
  </div>
{{/if}}