<!-- LOGIN -->
<h1>Entrar</h1>
<div class="card">
  <div class="card-body">
    <form action="/client/login" method="POST">
      <label for="senha">Nome: </label>
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="Digite seu nome"
        required
      />
      <label for="senha">Senha: </label>
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Digite a senha"
      />
      <button class="btn btn-outline-success mt-3" type="submit">Entrar</button>
    </form>
  </div>
</div>